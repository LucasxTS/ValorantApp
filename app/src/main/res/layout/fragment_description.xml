<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DescriptionFragment">

    <LinearLayout
        android:id="@+id/background"
        android:background="@color/red"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <Button
            android:id="@+id/back_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/baseline_arrow_forward_24"
            android:rotation="180"/>


        <TextView
            android:id="@+id/description_agent_name"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="40dp"
            android:textSize="36sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OMEN"/>

        <TextView
            android:id="@+id/description_agent_role"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Controller"
            android:layout_marginLeft="-80dp"
            android:layout_marginTop="100dp"/>

            <ImageView
                android:id="@+id/description_agent_image"
                android:translationZ="1dp"
                android:scaleType="fitCenter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/phoenix"/>
    </LinearLayout>

</LinearLayout>